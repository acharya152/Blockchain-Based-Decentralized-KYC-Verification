@page
@model ForgotPasswordModel

    <div class="col-md-4" id="register-cont">
        <form method="post">
            <img id="logo" src="~/icon.png" />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>  <br />  <br />


            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        <button type="submit" class="w-100 btn btn-lg btn-warning" style="color:white;">Reset Password</button>
        </form>
    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
